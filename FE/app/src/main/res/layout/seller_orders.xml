<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Custom tab buttons -->
    <LinearLayout
        android:id="@+id/layoutStatusTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/tvPending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Pending"
            android:textColor="#000"
            android:background="@drawable/bg_tab_unselected"
            android:padding="8dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvDelivered"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Delivered"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_tab_selected"
            android:padding="8dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvCancelled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cancelled"
            android:textColor="#000"
            android:background="@drawable/bg_tab_unselected"
            android:padding="8dp"
            android:textSize="18sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/ordersFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp" />
</LinearLayout>
