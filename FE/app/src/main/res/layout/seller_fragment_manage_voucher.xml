<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5">

    <!-- Nội dung chính -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Thanh tiêu đề (Top bar) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <!-- Nút back -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                app:tint="@color/pink" />

            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Manage Vouchers"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <!-- Nút tìm kiếm -->
            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_search_black"
                android:contentDescription="Search"
                app:tint="@color/pink" />
        </LinearLayout>


        <!-- Filter chips ngang -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/layoutChips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:showDividers="none">

                <!-- Chip mặc định được chọn -->
                <TextView
                    android:id="@+id/chipAll"
                    style="@style/Chip.Filled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="All"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/chipActive"
                    style="@style/Chip.Outline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text=" Active "
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/chipUpcoming"
                    style="@style/Chip.Outline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text=" Upcoming "
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/chipExpired"
                    style="@style/Chip.Outline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Expired "
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Danh sách voucher -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerVouchers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="60dp" />
    </LinearLayout>

    <!-- Nút thêm voucher -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddVoucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Add Voucher"
        app:srcCompat="@drawable/ic_add_circle"
        app:backgroundTint="@color/pink"
        app:elevation="6dp"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
