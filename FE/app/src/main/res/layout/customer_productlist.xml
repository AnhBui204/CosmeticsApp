<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Top bar: back, title, search, cart (badge) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
             />

        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Big  Small Fishes"
            android:textSize="20sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_search_black"
            />

        <!-- Cart + badge -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ImageButton
                android:id="@+id/btnCart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_shopping_cart"
                />

            <TextView
                android:id="@+id/tvCartBadge"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="end|top"
                android:gravity="center"
                android:text="3"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_cart_badge"
                android:translationX="2dp"
                android:translationY="-2dp"/>
        </FrameLayout>
    </LinearLayout>

    <!-- Filter chips ngang -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:dividerPadding="8dp"
            android:showDividers="none">

            <TextView
                android:id="@+id/chipPopular"
                style="@style/Chip"
                android:text="Popular"
                android:clickable="true"
                android:focusable="true"

                android:foreground="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:id="@+id/chipLowPrice"
                style="@style/Chip"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:text="Low Price" />
        </LinearLayout>
    </HorizontalScrollView>


    <!-- Grid sản phẩm 2 cột -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"/>
</LinearLayout>
